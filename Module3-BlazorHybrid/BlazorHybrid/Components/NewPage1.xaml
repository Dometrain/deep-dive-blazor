<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BlazorHybrid.Components.NewPage1"
             Title="NewPage1">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout Padding="30" Spacing="20">
            <Label Text="Counter" FontSize="24" HorizontalOptions="Center" />
            <Label x:Name="CountLabel" FontSize="48" HorizontalOptions="Center" />
            <Button Text="Count Up" Clicked="OnCountUpClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>